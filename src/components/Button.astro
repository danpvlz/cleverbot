---
import { twMerge } from "tailwind-merge";

interface Props {
  wIcon?: boolean;
  className?: string;
}

const { className = "", wIcon } = Astro.props;
---

<button
title="Get started"
  class={twMerge(
    "shadow-box-theme-green flex gap-2 items-center rounded-full bg-gradient-to-b from-theme-green to-theme-green-dark text-white text-xs px-6 py-3 hover:brightness-95 transition-all duration-150",
    className
  )}
>
  Get started
  {
    wIcon ? (
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        stroke-width="1"
        stroke="#fff"
        fill="#fff"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="w-4 h-4"
      >
        <path
          fill-rule="evenodd"
          d="M3.75 12a.75.75 0 01.75-.75h13.19l-5.47-5.47a.75.75 0 011.06-1.06l6.75 6.75a.75.75 0 010 1.06l-6.75 6.75a.75.75 0 11-1.06-1.06l5.47-5.47H4.5a.75.75 0 01-.75-.75z"
          clip-rule="evenodd"
        />
      </svg>
    ) : null
  }
</button>
